<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mentalBackground"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">


    <ImageView
            android:id="@+id/patient_cases_Img"
            android:layout_width="200dp"
            android:layout_height="250dp"
            tools:ignore="RtlSymmetry"
            android:contentDescription="@string/patientImg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.109"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:id="@+id/patientInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.976"
            app:layout_constraintVertical_bias="0.108">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:text="@string/n"/>

        <TextView
                android:id="@+id/patient_cases_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:text="@string/a"/>

        <TextView
                android:id="@+id/patient_cases_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:text="@string/e"/>

        <TextView
                android:id="@+id/patient_cases_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:text="@string/t"/>

        <TextView
                android:id="@+id/patient_cases_telephone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout">

        <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/textBackground"
                    android:text="@string/h"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/patient_cases_height" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="200dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/textBackground"
                    android:text="@string/w"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/patient_cases_weight" />
        </LinearLayout>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/textBackground"
            android:text="@string/si"/>

    <TextView
            android:id="@+id/patient_cases_sickness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.499" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/textBackground"
            android:text="@string/s"/>

    <TextView
            android:id="@+id/patient_cases_symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.499" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/textBackground"
            android:text="@string/d"/>

    <TextView
            android:id="@+id/patient_cases_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.499" />


</androidx.appcompat.widget.LinearLayoutCompat>


