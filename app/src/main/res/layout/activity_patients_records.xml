<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patientsRecords"
        android:background="@drawable/wallpaper">

    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:orientation = "vertical">

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "60dp"
                android:orientation = "horizontal">

            <Button
                    android:id="@+id/treat_patient_button"
                    android:layout_width="170dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/mentalTheme"
                    android:text="@string/Treat"
                    android:textColor="#fff" />

            <Button
                    android:id="@+id/record_button"
                    android:layout_width="170dp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/mentalBackground"
                    android:text="@string/record"/>

        </LinearLayout>
        <ListView
                android:id="@+id/treat_patient_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:divider="#000"
                android:dividerHeight="1dp"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>