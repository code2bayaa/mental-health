<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mentalBackground">

    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:orientation = "vertical"
            android:textColor="#000">

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "200dp"
                android:orientation = "horizontal">

            <ImageView
                    android:id="@+id/doctor_Img"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    tools:ignore="RtlSymmetry"
                    android:contentDescription="@string/doctorImg" />

            <LinearLayout
                    android:layout_width = "200dp"
                    android:layout_height = "match_parent"
                    android:orientation = "vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/textBackground"
                        android:text="@string/n"
                        android:textColor="#000"/>

                <TextView
                        android:id="@+id/doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#000"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/textBackground"
                        android:text="@string/d"
                        android:textColor="#000"/>

                <TextView
                        android:id="@+id/record_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#000"/>


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/textBackground"
                        android:text="@string/h"
                        android:textColor="#000"/>

                <TextView
                        android:id="@+id/patient_height"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#000"/>


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/textBackground"
                        android:text="@string/w"
                        android:textColor="#000"/>

                <TextView
                        android:id="@+id/patient_weight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#000"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:text="@string/m"
                android:textColor="#000"/>

        <TextView
                android:id="@+id/patient_medicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/patient_analysis"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.433" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:textColor="#000"
                android:text="@string/an"/>

        <TextView
                android:id="@+id/patient_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/patient_symptoms"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.622" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:textColor="#000"
                android:text="@string/si"/>

        <TextView
                android:id="@+id/patient_sick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/textBackground"
                android:textColor="#000"
                android:text="@string/s"/>

        <TextView
                android:id="@+id/patient_symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>


